


    <section>
        <div class="container mt-5 p-3">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem; height:24rem; margin-bottom:20px">
                        <img src="/product-images/{{this._id}}.jpg"
                            class="card-img-top" alt="..." style="height: 12rem;">
                        <div class="card-body">
                            <h5 class="{card-title}">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                        </div>
                    </div>
                </div>
               {{/each}} 
            </div>
        </div>
    </section>


<script>
    function addToCart(proId){
    $.ajax({
       url:'/add-to-cart/'+ proId,
       method:'get',
       success:(response)=>{
        if(response.status){
            let count = $('#cart-count').html()
            count= parseInt(count)+1
            $('#cart-count').html(count)
        }
       }
    })
}
</script>

    


  